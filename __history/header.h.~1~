struct flightData       //Структура одного Полета
{
	char idFrom[4];
	char nameFrom[10];
	char idTo[10];
	char nameTo[10];
	bool typeOfFlight;
	int date;
};

class Client
{
	private:
		WSAData wsa;
		SOCKET Connect;
		SOCKET Listen;
		SOCKADDR_IN Client;
		u_short port;
	public:
		Client();
		void getAirList();
};

class Request
{
	private:
