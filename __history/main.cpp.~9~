void __fastcall TForm1::Button1Click(TObject *Sender)
{

	while(1) // !!!
	{
		if(connect(Connect, (SOCKADDR*)&Client, sizeof(Client)))
		{
			send(Connect,(char *)&mes,sizeof(mes), 0);

			//recv(Connect, message, sizeof(message), 0);
			break;
        }

	}
}
